# ============================================================
#  Render Deployment — Environment Variables
#  Upload this file in: Render Dashboard → Service → Environment → "Upload .env file"
#  ⚠️  Fill in every value marked with <REPLACE_...> before uploading
# ============================================================

APP_NAME=Portfolio
APP_ENV=production
APP_DEBUG=false

# Run locally: php artisan key:generate --show
# Then paste the full "base64:..." string below
APP_KEY=base64:HYIuf6xgo066wsBcHM1LXdUpdbxews2EFRrxftEWOME=

# Your Render service URL (shown after first deploy)
APP_URL=https://portfolio-backend.onrender.com

# Your Vercel frontend URL (update after Vercel deploy)
FRONTEND_URL=https://your-app.vercel.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ── Logging ────────────────────────────────────────────────
LOG_CHANNEL=stderr
LOG_LEVEL=error

# ── Database (PostgreSQL — Render Free DB) ─────────────────
DB_CONNECTION=pgsql

# Paste the "Internal Database URL" from your Render PostgreSQL dashboard
# Format: postgresql://user:password@host/dbname
DATABASE_URL=postgresql://portfolio_db_vuqs_user:rk2HHYGOUwOp7fI46H9WwdghPvHkcxGy@dpg-d6fareea2pns73dfjvlg-a/portfolio_db_vuqs

# ── Cache / Session / Queue ────────────────────────────────
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ── Sanctum ────────────────────────────────────────────────
# Your Vercel domain WITHOUT https://
SANCTUM_STATEFUL_DOMAINS=your-app.vercel.app

# ── Mail (optional — update if you want real email sending) ─
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ── Unused on Render (safe to leave as-is) ─────────────────
BCRYPT_ROUNDS=12
APP_MAINTENANCE_DRIVER=file
